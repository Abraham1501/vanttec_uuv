<launch>
    <param name="frequency" type="int" value="100" />

    <arg name="start_point" default="[6, -5, 0]" /> 
    <arg name="goal_point"  default="[-6, 5, 0]" /> 

    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find uuv_motion_planning)/launch/rviz_cfg/map_uuv.rviz" />
    <node name="map_server" pkg="map_server" type="map_server" args="$(find uuv_map_tools)/maps/map2.yaml">
        <param name="frame_id" value="world"/>
    </node>

    <node pkg="uuv_motion_planning" name="s_curve_trajectory_planner" type="s_curve_trajectory_planner_node">
        <rosparam file="$(find uuv_motion_planning)/config/planner_config.yaml"/>
        <rosparam param="start_point" subst_value="True">$(arg start_point)</rosparam>
        <rosparam param="goal_point"  subst_value="True">$(arg goal_point)</rosparam>
    </node>

    <include file="$(find uuv_control)/launch/vtec_u4_pid2.launch">
        <arg name="init_pose" value="$(arg start_point)"/>
    </include>

</launch>